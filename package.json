  "devDependencies": {
    "@types/node": "catalog:",
    "@vth/eslint-config": "workspace:",
    "bumpp": "^10.2.3",
    "chng": "^0.1.1",
    "eslint": "catalog:",
    "lefthook": "^1.12.3",
    "only-allow": "^1.2.1",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  }
}
