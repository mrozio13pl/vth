  "license": "MIT",
  "author": "mrozio13pl",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo build --filter=www",
    "changelog": "chng",
    "dev": "turbo dev --filter=!./templates/*",
